<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>packages</id>
    <formats>
        <format>dir</format>
    </formats>
    <baseDirectory>fuse-test-service-engine2</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/resources/applicationConfig</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*engine2*.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/ontology</directory>
            <outputDirectory>ontology</outputDirectory>
            <includes>
                <include>Dragons.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/schema</directory>
            <outputDirectory>schema</outputDirectory>
            <includes>
                <include>DragonsIndexProvider.json</include>
                <include>DragonsGraphLayoutProviderFactory.json</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/resources/readme/fuse.service.readme.txt</source>
            <outputDirectory>./</outputDirectory>
            <destName>readme.txt</destName>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/test/start-fuse-service.bat</source>
            <outputDirectory>./</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/test/start-fuse-service.sh</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <scope>runtime</scope>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>