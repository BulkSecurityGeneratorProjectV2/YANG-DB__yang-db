<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>packages</id>
    <formats>
        <format>dir</format>
    </formats>
    <baseDirectory>fuse-test-service-engine2-knowledge</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/resources/ontology</directory>
            <outputDirectory>ontology</outputDirectory>
            <includes>
                <include>Knowledge.json</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/resources/config/application.test.engine3.m1.dfs.knowledge.public.conf</source>
            <outputDirectory>./config</outputDirectory>
            <destName>application.conf</destName>
        </file>
        <file>
            <source>${project.basedir}/resources/logConfig/logback.xml</source>
            <outputDirectory>./config</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/ontology/Knowledge.json</source>
            <outputDirectory>./ontology</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/readme/fuse.service.readme.txt</source>
            <outputDirectory>./</outputDirectory>
            <destName>readme.txt</destName>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/standard/start-fuse-service.bat</source>
            <outputDirectory>./</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/standard/start-fuse-service.sh</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>