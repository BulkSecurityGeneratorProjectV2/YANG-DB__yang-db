<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>fuse-service-package</id>
    <formats>
        <format>dir</format>
    </formats>
    <baseDirectory>fuse-service-test-public</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*sources.jar</exclude>
                <exclude>*test-sources.jar</exclude>
                <exclude>fuse-assembly*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/ontology</directory>
            <outputDirectory>ontology</outputDirectory>
            <includes>
                <include>Dragons.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/resources/schema</directory>
            <outputDirectory>schema</outputDirectory>
            <includes>
                <include>DragonsIndexProvider.json</include>
                <include>DragonsGraphLayoutProviderFactory.json</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${project.basedir}/resources/applicationConfig/application.engine2.m1.test.public.conf</source>
            <outputDirectory>./config</outputDirectory>
            <destName>application.conf</destName>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/start-fuse-service.bat</source>
            <outputDirectory>./</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/start-fuse-service-debug.bat</source>
            <outputDirectory>./</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/resources/scripts/start-fuse-service.sh</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.kayhut:fuse-assembly:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>