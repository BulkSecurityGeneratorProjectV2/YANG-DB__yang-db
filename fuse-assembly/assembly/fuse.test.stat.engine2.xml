<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>packages</id>
    <formats>
        <format>dir</format>
    </formats>
    <baseDirectory>fuse-stat-engine2-test</baseDirectory>

    <files>
        <file>
            <source>${project.basedir}/resources/readme/fuse.engine2.stat.readme.txt</source>
            <outputDirectory>./</outputDirectory>
            <destName>readme.txt</destName>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>./lib</outputDirectory>
            <scope>runtime</scope>
            <includes>
                <include>org.kayhut:fuse-stat</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>./lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.kayhut:*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

</assembly>