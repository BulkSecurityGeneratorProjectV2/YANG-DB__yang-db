{
  "order": 0,
  "template": "i*",
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "0",
      "refresh_interval": "100ms",
      "analysis": {
        "analyzer": {
          "knowledge_ngram_analyzer": {
            "type": "custom",
            "tokenizer": "knowledge_ngram_tokenizer",
            "filter": [ "standard", "lowercase", "knowledge_stopwords" ]
          },
          "knowledge_standard_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [ "standard", "lowercase", "knowledge_stopwords" ]
          }
        },
        "tokenizer": {
          "knowledge_ngram_tokenizer": {
            "type": "nGram",
            "min_gram": "1",
            "max_gram": "10",
            "token_chars": [ "letter", "digit" ]
          }
        },
        "filter": {
          "knowledge_stopwords": {
            "type": "stop",
            "stopwords": "_none"
          }
        }
      }
    }
  },
  "mappings": {
    "insight": {
      "properties": {
        "creationUser": {
          "index": "not_analyzed",
          "type": "string"
        },
        "creationTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        },
        "refs": {
          "index": "not_analyzed",
          "type": "string"
        },
        "context": {
          "index": "not_analyzed",
          "type": "string"
        },
        "lastUpdateUser": {
          "index": "not_analyzed",
          "type": "string"
        },
        "value": {
          "type": "string",
          "analyzer": "knowledge_ngram_analyzer",
          "search_analyzer": "knowledge_standard_analyzer",
          "fields": {
            "keyword": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "entityIds": {
          "index": "not_analyzed",
          "type": "string"
        },
        "authorization": {
          "index": "not_analyzed",
          "type": "string"
        },
        "authorizationCount": {
          "type": "integer"
        },
        "lastUpdateTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        },
        "deleteUser": {
          "index": "not_analyzed",
          "type": "string"
        },
        "deleteTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        }
      }
    }
  },
  "aliases": {}
}