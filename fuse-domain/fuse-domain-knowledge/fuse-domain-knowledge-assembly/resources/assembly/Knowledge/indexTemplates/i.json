{
  "order": 0,
  "template": "i*",
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "0",
      "refresh_interval": "100ms",
      "analysis": {
        "normalizer":{
          "lowercase_normalizer":{
            "filter":[
              "lowercase"
            ],
            "type":"custom"
          }
        },
        "analyzer": {
          "knowledge_ngram_analyzer": {
            "type": "custom",
            "tokenizer": "knowledge_ngram_tokenizer",
            "filter": [ "standard", "knowledge_stopwords","lowercase" ]
          },
          "knowledge_standard_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [ "standard", "knowledge_stopwords" ,"lowercase"]
          }
        },
        "tokenizer": {
          "knowledge_ngram_tokenizer": {
            "type": "nGram",
            "min_gram": "1",
            "max_gram": "10",
            "token_chars": [ "letter", "digit", "punctuation", "symbol" ]
          }
        },
        "filter": {
          "knowledge_stopwords": {
            "type": "stop",
            "stopwords": "_none"
          }
        }
      }
    }
  },
  "mappings": {
    "pge": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "type": {
          "type": "keyword"
        },
        "context": {
          "type": "keyword"
        },
        "content": {
          "type": "text",
          "analyzer": "knowledge_ngram_analyzer",
          "search_analyzer": "knowledge_standard_analyzer",
          "fields": {
            "keyword": {
              "normalizer":"lowercase_normalizer",
              "type": "keyword"
            }
          }
        },
        "entityIds": {
          "type": "keyword"
        },
        "refs": {
          "type": "keyword"
        },
        "creationUser": {
          "type": "keyword"
        },
        "creationTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        },
        "lastUpdateUser": {
          "type": "keyword"
        },
        "lastUpdateTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        },
        "deleteUser": {
          "type": "keyword"
        },
        "deleteTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        },
        "systemCreationTime": {
          "format": "epoch_millis||strict_date_optional_time||yyyy-MM-dd HH:mm:ss.SSS",
          "type": "date"
        },
        "systemCreationUser": {
          "type": "keyword"
        },
        "authorization": {
          "type": "keyword"
        },
        "authorizationCount": {
          "type": "integer"
        }
      }
    }
  },
  "aliases": {}
}